<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-45dp"
        android:src="@drawable/topwave"
        android:id="@+id/topwave"
        app:tint="@color/tealStormCloud"
        />

<!--        app:tint="#fae39d"-->
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/bottomwave"
        app:tint="@color/tealStormCloud"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/bottomwave" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
android:src="@drawable/splash_image"
        app:civ_border_color="@color/black"
        app:civ_border_width="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="\@anilfromdit "
        android:textSize="18sp"
        android:textColor="?android:attr/textColor"
        android:id="@+id/myName"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Because There's some quality your workplace deserve"
        android:layout_below="@id/myName"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/textColor"
        android:id="@+id/mySlogan"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="14dp"

        />
</RelativeLayout>