<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueish"
    tools:context=".NotConnectedActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/retryButton"
        android:src="@drawable/dog2"
        android:id="@+id/dogPic"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHOOPS!\nNo Internet"
        android:textSize="24dp"
        android:layout_marginBottom="-30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_above="@id/retryButton"
        android:padding="20dp"
        android:id="@+id/headingEN"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/headingEN"
    android:text="There seems to be problem with your network"
    android:layout_marginLeft="20dp"
    android:textColor="@color/lightGrey"
    android:layout_marginTop="10dp"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:text="Try Again"
        android:backgroundTint="@color/lightGrey"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/retryButton"
        />



</RelativeLayout>